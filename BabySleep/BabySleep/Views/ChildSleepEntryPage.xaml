                                <behaviour:EntryLineValidationBehavior IsValid="{Binding FeedingCount.IsValid}"/>
                            </Entry.Behaviors>
                        </custom:ExtendedEntry>

                        <Label Text="{x:Static resources:ChildSleepResources.Awakenings}" VerticalOptions="Center" Grid.Row="1" Grid.Column="0"/>
