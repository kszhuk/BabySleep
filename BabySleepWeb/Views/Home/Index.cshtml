@using MyResources = BabySleep.Resources.Resx;

@{
    ViewData["Title"] = MyResources.MainResources.Main;
}

@section featured {
    <!-- This content will be rendered outside the "container div" -->
    <div class="text-center header-blue container-fluid pt-3">
        <h1 class="pt-5"><strong> Baby sleep app </strong></h1>
                <p>@MyResources.MainResources.BsTrainer</p>

        <div class="row pt-4" 3>
            <div class="col-md-2"></div>
            <div class="col-md-2 align-text-top">
                <strong>@MyResources.MainResources.BsTrack1</strong>&nbsp;@MyResources.MainResources.BsTrack2
            </div>
            <div class="col-md-2 align-text-top">
                <strong>@MyResources.MainResources.BsSeveralChildren1</strong>&nbsp;@MyResources.MainResources.BsSeveralChildren2
            </div>
            <div class="col-md-2 align-text-top">
                <strong>@MyResources.MainResources.BsUseCharts1</strong>&nbsp;@MyResources.MainResources.BsUseCharts2
            </div>
            <div class="col-md-2 align-text-top">
                <strong>@MyResources.MainResources.BsProUsers1</strong>&nbsp;@MyResources.MainResources.BsProUsers2
            </div>
            <div class="col-md-2"></div>
        </div>

        <div class="row justify-content-center align-items-center pt-3">
            <a class="btn btn-dark app-button mb-3 d-flex flex-row me-1">
                <i class="bi bi-apple"></i>
                <div class="d-flex flex-column">
                    <span>@MyResources.MainResources.Download</span>
                    <h5 class="mb-0">App Store</h5>
                </div>
            </a>

            <a class="btn btn-dark app-button mb-3 d-flex flex-row ms-1">
                <i class="bi bi-google-play"></i>
                <div class="d-flex flex-column">
                    <span>@MyResources.MainResources.Download</span>
                    <h5 class="mb-0">Google Store</h5>
                </div>
            </a>
        </div>
    </div>
    <p></p>
}

    <div class="row">
        <div id="carouselMobile" class="carousel slide carousel-dark col-md-4" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="../images/mob-main.png" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="../images/mob-edit.png" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="../images/mob-stat.png" alt="...">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselMobile" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselMobile" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div id="carouselWeb" class="carousel slide carousel-dark col-md-8" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="../images/web-main.png" class="d-block img-fluid" style="width:500px; height:300px" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="../images/web-edit.png" style="width:500px; height:300px" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="../images/web-stat.png" style="width:500px; height:300px" alt="...">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselWeb" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselWeb" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <link rel="stylesheet" href="~/css/main.css" />