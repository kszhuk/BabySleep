@model InputLoginModel

<form method="post">
    <div class="row pb-3">
        <h2 class="text-primary">Login</h2>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <input asp-for="Email" class="form-control" placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary"><i class="bi bi-box-arrow-in-right"></i> &nbsp; Login</button>
@*    <a asp-controller="Login" asp-action="Login" class="btn btn-primary">
        <i class="bi bi-box-arrow-in-right"></i> &nbsp; Login
    </a>*@
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}